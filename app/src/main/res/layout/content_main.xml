<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:id="@+id/drawer"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/toolbar_blank" android:id="@+id/toolbar" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal"
                android:background="@color/colorBackgroundDark"
                android:layout_below="@id/toolbar"
                android:id="@+id/topBox"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location_on_black_36dp"
                    android:id="@+id/locationIcon"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Zip Code"
                    android:inputType="number"
                    android:id="@+id/postalBox"
                    />

            </LinearLayout>
<!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:text="Please Select One:"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/topBox"
                android:id="@+id/headText"
                />
-->

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/topBox"
                android:layout_above="@+id/searchButton"
                >


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="40dp"
                        android:orientation="horizontal"
                        android:id="@+id/topSubParent"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/catSelect"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:src="@drawable/ic_dog_large"
                            android:background="@drawable/dog_background"
                            android:layout_marginRight="5dp"
                            android:id="@+id/dogSelect"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/dogSelect"
                            android:layout_centerVertical="true"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:src="@drawable/ic_cat_large"
                            android:layout_below="@id/dogSelect"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/dog_background"
                            android:id="@+id/catSelect"
                            />


                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/topSubParent"
                        android:gravity="center_horizontal"
                        android:id="@+id/topSub"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:background="@drawable/other_background"
                            android:id="@+id/pigSelectParent"
                            >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_pig_sm"
                                android:id="@+id/pigSelect"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="11sp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorBlack"
                                android:text="Pig"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:background="@drawable/other_background"
                            android:layout_marginLeft="2dp"
                            android:id="@+id/rabbitSelectParent"
                            >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_rabbit_sm"
                                android:id="@+id/rabbitSelect"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textSize="11sp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorBlack"
                                android:text="Rabbit"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/other_background"
                            android:id="@+id/birdSelectParent"
                            >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_bird_sm"
                                android:id="@+id/birdSelect"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textSize="11sp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorBlack"
                                android:text="Bird"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/other_background"
                            android:id="@+id/horseSelectParent"
                            >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_horse_sm"
                                android:id="@+id/horseSelect"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textSize="11sp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorBlack"
                                android:text="Horse"
                                />

                        </LinearLayout>




                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_marginTop="30dp"
                        android:layout_below="@id/topSub"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:background="@drawable/other_background"
                            android:id="@+id/sheepSelectParent"
                            >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_barn_sm"
                                android:id="@+id/sheepSelect"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textSize="11sp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorBlack"
                                android:text="Barnyard"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/other_background"
                            android:id="@+id/alligatorSelectParent"
                            >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_turtle_sm"
                                android:id="@+id/alligatorSelect"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:layout_marginBottom="5dp"
                                android:textSize="11sp"
                                android:textColor="@color/colorBlack"
                                android:text="Reptile"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:orientation="vertical"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/other_background"
                            android:id="@+id/mouseSelectParent"
                            >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_mouse_sm"
                                android:id="@+id/mouseSelect"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:layout_marginBottom="5dp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/colorBlack"
                                android:text="Small &amp; Furry"
                                />

                        </LinearLayout>



                    </LinearLayout>



                </RelativeLayout>


            </ScrollView>


<!--
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/searchFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_navigate_next_white_24dp" />
-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorBackgroundDarkerer"
                android:layout_alignParentBottom="true"
                android:gravity="right"
                android:paddingRight="30dp"
                android:id="@+id/searchButton"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="NEXT"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>



            </LinearLayout>


        </RelativeLayout>


        <!-- Nav items -->

        <ListView
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/colorBackgroundDarker"
            android:dividerHeight="0dp"
            android:divider="@null"
            android:id="@+id/navItemsList"
            />

    </android.support.v4.widget.DrawerLayout>


</LinearLayout>


